{
  "name": "contudo",
  "version": "2.0.0",
  "description": "Contudo: Controle financeiro moderno com gráficos e agendamento de transações",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "echo \"Building production version...\"",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "financas",
    "controle-financeiro",
    "nodejs",
    "express",
    "money-management",
    "personal-finance",
    "charts",
    "scheduling",
    "modern-ui"
  ],
  "author": {
    "name": "Luiz Paulo Peixoto",
    "email": "luizpaulo@example.com",
    "url": "https://github.com/LuizPaulo1002"
  },
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LuizPaulo1002/Contudo.git"
  },
  "bugs": {
    "url": "https://github.com/LuizPaulo1002/Contudo/issues"
  },
  "homepage": "https://github.com/LuizPaulo1002/Contudo#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "electron": "^25.9.0",
    "electron-builder": "^24.6.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "build": {
    "appId": "com.luizpaulo.contudo",
    "productName": "Contudo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "frontend/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.finance",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Contudo"
    }
  }
}